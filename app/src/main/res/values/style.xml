<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Para el BottomSheet usado en las pestañas de Requisitos, Pasos a seguir y Nosotros -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <!-- Para el BottomSheet usado en las pestañas de Requisitos, Pasos a seguir y Nosotros -->
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Para las animaciones del Dialog al hacer clic en una propuesta -->
    <style name="InfoDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <!-- Para las animaciones del Dialog al abrirse y cerrarse el Dialog de WifiActivity -->
    <style name="WiFiDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Para el Dialog de WifiActivity -->
    <style name="WiFiDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>